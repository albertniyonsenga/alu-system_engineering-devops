#!/usr/bin/env bash
# 3-let_me_in
# Adds the provided SSH public key to the ubuntu user's authorized_keys on the server

# Public key to add
PUB_KEY="ssh-rsa "

# Append the key only if it does not already exist to avoid duplicates
grep -qxF "$PUB_KEY" ~/.ssh/authorized_keys || echo "$PUB_KEY" >> ~/.ssh/authorized_keys
chmod 600 ~/.ssh/authorized_keys
