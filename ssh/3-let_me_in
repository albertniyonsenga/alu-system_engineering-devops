#!/usr/bin/env bash
# Adds the provided SSH public key to the ubuntu user's authorized_keys on the server
# Create .ssh directory if it doesn't exist
mkdir -p ~/.ssh
chmod 700 ~/.ssh

# Append the key only if it does not already exist
grep -qxF "ssh-rsa " ~/.ssh/authorized_keys || \
echo "ssh-rsa " >> ~/.ssh/authorized_keys

chmod 600 ~/.ssh/authorized_keys

